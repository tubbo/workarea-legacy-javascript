 * @memberof WORKAREA
 */

/**
 * @namespace admin
 * @memberof WORKAREA.routes
 */

/**
 * @namespace storefront
 * @memberof WORKAREA.routes
 */

<%= JsRoutes.generate(namespace: 'WORKAREA.routes.admin', application: Workarea::Admin::Engine.instance) %>
WORKAREA.routes.admin.configure({ prefix: '<%= Workarea::Admin::Engine.mount_path %>' });


if (I18n.currentLocale() !== '<%= I18n.default_locale %>') {
    WORKAREA.routes.admin.configure({ default_url_options: { locale: I18n.currentLocale() } });
}

<%= JsRoutes.generate(namespace: 'WORKAREA.routes.storefront', application: Workarea::Storefront::Engine.instance) %>
WORKAREA.routes.storefront.configure({ prefix: '<%= Workarea::Storefront::Engine.mount_path %>' });

if (I18n.currentLocale() !== '<%= I18n.default_locale %>') {
    WORKAREA.routes.storefront.configure({ default_url_options: { locale: I18n.currentLocale() } });
}
